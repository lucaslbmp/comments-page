generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserImage {
  id     String @id @default(cuid())
  png    String
  webp   String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id       String     @id @default(cuid())
  username String
  image    UserImage?
  comments Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  score     Int
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
